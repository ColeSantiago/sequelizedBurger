<div class="wrapper">
  <h1>Eat-Da-Burger!</h1>

  <div class="burger-photo-div"><img class="burger-photo" src="burger.png"></div>

      <ul class="not-eaten">
        {{#each Burger}}
          {{#unless devoured}}
          <li>
            {{burger_name}}
            <button class="eat-burger" data-id="{{id}}" data-newDevour="{{devoured}}" id="{{devoured}}">
              {{#if devoured}}{{else}}DEVOUR IT!{{/if}} 
            </button>
          </li>    
          {{/unless}}
        {{/each}}
      </ul>
    
    <div class="eaten">
      <ul class="eaten-burgers">
        {{#each Burger}}
          {{#if devoured}}
          <li>
            {{burger_name}}
            <button class="eat-burger" data-id="{{id}}" data-newDevour="{{devoured}}" id="{{devoured}}">
              {{#if this.devoured}}{{else}}DEVOUR IT!{{/if}} 
            </button>
          </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  
  <div class="form-wrapper">
    <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burger-name">Burger Name:</label>
          <input type="text" id="burger-name" name="name">
        </div>
        <button type="submit" class="add-burger">Add Burger</button>
      </form>
  </div>
</div>