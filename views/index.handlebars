<div class="wrapper">
  <h1>Eat-Da-Burger!</h1>

  <div class="burger-photo-div"><img class="burger-photo" src="burger.png"></div>

      <ul class="not-eaten">
        {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}    
          {{/unless}}
        {{/each}}
      </ul>
    
    <div class="eaten">
      <ul class="eaten-burgers">
        {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  
  <div class="form-wrapper">
    <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burger-name">Burger Name:</label>
          <input type="text" id="burger-name" name="name">
        </div>
        <button type="submit" class="add-burger">Add Burger</button>
      </form>
  </div>
</div>